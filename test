    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        // Ensure GSAP is registered if not already
        if (typeof gsap !== 'undefined') {
            gsap.registerPlugin(ScrollTrigger);
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Lottie Preloader Logic
            const preloader = document.getElementById('preloader');
            window.addEventListener('load', () => {
                gsap.to(preloader, {
                    opacity: 0,
                    visibility: 'hidden',
                    duration: 0.8,
                    ease: "power2.out",
                    onComplete: () => {
                        preloader.classList.add('hidden');
                    }
                });
            });

            // Typewriter Effect for Hero Section
            const typewriterTextElement = document.getElementById('typewriter-text');
            const phrases = [
                "\"I will restore to you the years that the swarming locust has eaten.\" - Joel 2:25",
                "Spreading God's love and hope across Kenya.",
                "Transforming lives through faith and service.",
                "Building a brighter future, one soul at a time."
            ];
            let phraseIndex = 0;
            let charIndex = 0;
            let isDeleting = false;

            function typeWriter() {
                const currentPhrase = phrases[phraseIndex];
                let displayedText = currentPhrase.substring(0, charIndex);
                typewriterTextElement.textContent = displayedText;

                if (!isDeleting && charIndex < currentPhrase.length) {
                    charIndex++;
                    setTimeout(typeWriter, 70); // Typing speed
                } else if (isDeleting && charIndex > 0) {
                    charIndex--;
                    setTimeout(typeWriter, 40); // Deleting speed
                } else if (!isDeleting && charIndex === currentPhrase.length) {
                    setTimeout(() => isDeleting = true, 2000); // Pause at end of phrase
                    setTimeout(typeWriter, 40);
                } else if (isDeleting && charIndex === 0) {
                    isDeleting = false;
                    phraseIndex = (phraseIndex + 1) % phrases.length;
                    setTimeout(typeWriter, 500); // Pause before typing next phrase
                }
            }
            typeWriter(); // Start the typewriter effect

            // GSAP Scroll-based Animations
            gsap.utils.toArray('.animate-on-scroll').forEach(section => {
                gsap.from(section, {
                    opacity: 0,
                    y: 50,
                    duration: 1,
                    ease: "power2.out",
                    scrollTrigger: {
                        trigger: section,
                        start: "top 80%", // When the top of the section hits 80% of the viewport
                        end: "bottom 20%",
                        toggleActions: "play none none none", // Play animation once
                        // markers: true, // For debugging purposes
                    }
                });
            });

            // GSAP Hover Animations for Buttons
            document.querySelectorAll('.btn-primary, .btn-secondary').forEach(button => {
                button.addEventListener('mouseenter', () => {
                    gsap.to(button, { scale: 1.05, duration: 0.2, ease: "power1.out" });
                });
                button.addEventListener('mouseleave', () => {
                    gsap.to(button, { scale: 1, duration: 0.2, ease: "power1.out" });
                });
            });

            // Active Navbar Link Highlighting
            const currentPath = window.location.pathname.split('/').pop();
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active'); // Remove active from all
                if (link.getAttribute('href') === currentPath || (currentPath === '' && link.getAttribute('href') === 'index.html')) {
                    link.classList.add('active');
                }
            });

            // Gemini API Integration: Daily Devotion Generator
            const generateDevotionBtn = document.getElementById('generateDevotionBtn');
            const devotionOutput = document.getElementById('devotionOutput');
            const devotionText = document.getElementById('devotionText');
            const devotionLoading = document.getElementById('devotionLoading');

            generateDevotionBtn.addEventListener('click', generateDevotion);

            async function generateDevotion() {
                devotionOutput.classList.remove('hidden'); // Show the output area
                devotionText.textContent = ''; // Clear previous text
                devotionLoading.classList.remove('hidden'); // Show loading indicator

                const prompt = "Provide a short, uplifting Christian devotional message or a relevant scripture verse with a brief reflection (max 100 words). Focus on themes of hope, faith, or encouragement.";
                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });

                const payload = { contents: chatHistory };
                const apiKey = ""; // Canvas will automatically provide the API key at runtime
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(`API error: ${response.status} ${response.statusText} - ${errorData.error.message}`);
                    }

                    const result = await response.json();

                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        const text = result.candidates[0].content.parts[0].text;
                        devotionText.textContent = text;
                    } else {
                        devotionText.textContent = "Could not generate a devotion. Please try again.";
                        console.error("Unexpected API response structure:", result);
                    }
                } catch (error) {
                    devotionText.textContent = "Failed to generate devotion. Please check your network connection or try again later.";
                    console.error("Error generating devotion:", error);
                } finally {
                    devotionLoading.classList.add('hidden'); // Hide loading indicator
                }
            }
        });
    </script>
</body>
</html>
